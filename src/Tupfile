CC = clang
CFLAGS += -O2 -Weverything -Wno-disabled-macro-expansion -Wno-unused-parameter -fstack-protector-all -fpie -pie -Wl,-z,relro,-z,now -std=c11
LIBS += `pkg-config --libs-only-l libcurl`
SRC = hr.c isitup.c lsip.c pomf.c qurl.c sicolor.c
#SRC = hr.c isitup.c lsip.c pomf.c qurl.c sicolor.c pipes.c

: foreach $(SRC) | ansicolor.h |> $(CC) $(CFLAGS) $(LIBS) %f -o %o |> %B.out
